        <Button x:Name="BPaly" Content="Играть" HorizontalAlignment="Center" Height="50"  Margin="-190,100,0,0" VerticalAlignment="Top" Width="178" Click="BPaly_Click"/>
        <Button x:Name="BRecordes" Content="Рекорды" HorizontalAlignment="Center" Height="50"  Margin="190,100,0,0" VerticalAlignment="Top" Width="178" Click="BRecordes_Click"/>
